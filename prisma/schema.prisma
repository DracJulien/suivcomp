datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int      @id @default(autoincrement())
  username  String   @unique
  password  String
  createdAt DateTime @default(now())
  
  // Relation avec le mod√®le Role
  role      Role?    @relation(fields: [roleId], references: [id])
  roleId    Int?
  active    Boolean  @default(true) //indique si l'utilisateur est actif
}

model Role {
  id    Int     @id @default(autoincrement())
  name  String  @unique
  users User[]
}
